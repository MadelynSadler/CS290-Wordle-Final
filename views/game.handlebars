<!-- Winning Modal -->
<div id="winningModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Congratulations!</h2>
      <span id="closeWinningModal" class="close">&times;</span>
    </div>
    <p>You have successfully completed the game.</p>
    <p id="dynamicTotalWins">Total Wins: {{wins}}</p>
    <button id="restartWinningButton" class="restartButton">Restart</button>
  </div>
</div>

<!-- Losing Modal -->
<div id="losingModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h2>Game Over!</h2>
      <span id="closeLosingModal" class="close">&times;</span>
    </div>
    <p id="dynamicWordleWord">The correct word was: {{correctWord}}</p>
    <p id="dynamicTotalLosses">Number of losses: {{numberOfLosses}}</p>
    <button id="restartLosingButton" class="restartButton">Restart</button>
  </div>
</div>